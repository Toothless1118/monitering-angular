{
  "extends"       : "../.jshintrc",
  "indent"        : 2,
  "quotmark"      : "single",
  "strict"        : false,
  "globalstrict"  : true,

  // Complexity: maxparams, maxdepth, maxstatements, maxcomplexity will go here

  // Relaxing
  "esnext"        : false,
  "globalstrict"  : true,
  "laxbreak"      : true,
  "loopfunc"      : true,

  // Environments
  "browser"       : true,     // Web Browser (window, document, etc)
  "jquery"        : true,
  "node"          : false,

  // Custom Globals
  "globals": {
    "angular"     : true,
    "io"          : true,
    "moment"      : true,
    "pako"        : true,
    "countUp"     : true,
    "jstz"        : true,
    "Drop"        : true,
    "Highcharts"  : true,
    "randomColor" : true,
    "inject"      : true
  }
}
